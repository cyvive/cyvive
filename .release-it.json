{
  "preReleaseId": null,
  "use": "git.tag",
  "scripts": {
    "beforeStart": null,
    "beforeBump": null,
    "afterBump": null,
    "beforeStage": null,
    "changelog": "conventional-changelog -p angular | tail -n +3",
    "afterRelease": null
  },
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "addUntrackedFiles": false,
    "commit": false,
    "commitMessage": "chore: Release ${version}",
