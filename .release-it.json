    "tagName": "${version}",
    "tagArgs": "",
    "push": true,
    "pushArgs": "",
    "pushRepo": "origin"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "preRelease": false,
    "draft": false,
    "tokenRef": "GITHUB_TOKEN",
    "assets": null,
    "host": null,
    "timeout": 0,
    "proxy": null
  },
  "gitlab": {
    "release": false,
    "releaseName": "${version}",
    "releaseNotes": null,
    "tokenRef": "GITLAB_TOKEN",
    "assets": null,
    "origin": null
  },
  "prompt": {
    "commit": false,
    "tag": true,
    "push": true,
    "ghRelease": true,
    "glRelease": false,
    "publish": true
  }
